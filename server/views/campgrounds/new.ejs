<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/campgrounds" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Campground Title" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">*required</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Location" required>
                <div class="invalid-feedback">*required</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" name="campground[image]" id="image" placeholder="Image" required>
                <div class="invalid-feedback">*required</div>
            </div>
            <div class="mb-r">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="dollar">$</span>
                    <input type="text" name="campground[price]" id="price" class="form-control" aria-describedby="dollar" placeholder="0.00" required>
                    <div class="invalid-feedback">*required</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" name="campground[description]" id="description" placeholder="Description" required></textarea>
                <div class="invalid-feedback">*required</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>